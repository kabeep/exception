{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2015",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "experimentalDecorators": true
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "esm": true,
        "transpileOnly": true
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "example",
        "dist"
    ]
}
